@model Controle.Cursos.Models.Solicitacao

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Etapa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Etapa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Curso.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAbertura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAbertura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFechamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFechamento)
        </dd>
    </dl>
</div>
<div>
        <form asp-action="Cancelar">
    @if (Model.Etapa == Controle.Cursos.Models.Enum.EEtapaSolicitacao.Aberta)
    {
    <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancelar" class="btn btn-danger" /> 
        <a>|</a>
    }

    <a asp-action="Index">Voltar</a>
        </form>
</div>